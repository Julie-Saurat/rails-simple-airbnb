<div class="container">
  <div class="info-container">
    <h1><%= @flat.name %></h1>
    <h3><%= @flat.address %></h3>
  </div>

  <div class="info-container">
    <h2>A bit more about this flat...</h2>
    <h3><%= @flat.description %></h3>
  </div>

  <div class="info-container">
    <h2>Details</h2>
    <div class="card-number">
      <p class="card-text"><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
      <p class="card-text"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
    </div>
  </div>

</div>
